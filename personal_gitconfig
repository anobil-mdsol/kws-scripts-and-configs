[core]
  editor = vim

[init]
  templatedir=/Users/stannard/scripts/git_template

[push]
	default = current

[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold ul

[branch]
  autosetuprebase = always

[diff]
  color = true
  whitespace = red reverse

[alias]
  fc = fynanz_checkout
  fp = fynanz_push
  st = status
  co = checkout
  g = !test \"$(git status --porcelain Gemfile.lock)\" && git checkout Gemfile.lock || exit 0
  po = push origin
  cbr = !git branch --merged | grep -v master | grep -v dev | xargs git branch -d
  r = !git l -30
  ra = !git r --all
#  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all

  aa = commit -a --amend
