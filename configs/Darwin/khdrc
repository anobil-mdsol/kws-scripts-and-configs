khd void_unlisted_bind off

# reload config
cmd + alt + ctrl - r : khd -e "reload"

# refresh chunkwm

#cmd + alt + ctrl - c : killall chunkwm; chunkwm

# open terminal, blazingly fast compared to iTerm/Hyper
#alt - return : open -na /Applications/Utility/Terminal.app
alt - p : open -a /Applications/Firefox.app
alt + shift - p : open -a /Applications/Google\ Chrome.app
alt - o : open -a /Applications/Slack.app

alt - return [iTerm2] : tmux new-window
alt - return ![iTerm2] : open -a /Applications/Iterm.app
alt - t : tmux new-window

# focus window
alt - h : tmux select-pane -L
alt - j : tmux select-pane -D
alt - k : tmux select-pane -U
alt - l : tmux select-pane -R

alt - up : tmux copy-mode
alt - pageup : tmux copy-mode -u

# equalize size of windows
#shift + alt - 0 : chunkc tiling::desktop --equalize

# swap window
#shift + alt - h : chunkc tiling::window --swap west
#shift + alt - j : chunkc tiling::window --swap south
#shift + alt - k : chunkc tiling::window --swap north
#shift + alt - l : chunkc tiling::window --swap east

# move window
#shift + alt - h : chunkc tiling::window --warp west
#shift + alt - j : chunkc tiling::window --warp south
#shift + alt - k : chunkc tiling::window --warp north
#shift + alt - l : chunkc tiling::window --warp east

alt - 0: tmux move-window -r

alt - 1 : tmux select-window -t :=0; open -a /Applications/Iterm.app
alt - 2 : tmux select-window -t :=1; open -a /Applications/Iterm.app
alt - 3 : tmux select-window -t :=2; open -a /Applications/Iterm.app
alt - 4 : tmux select-window -t :=3; open -a /Applications/Iterm.app
alt - 5 : tmux select-window -t :=4; open -a /Applications/Iterm.app
alt - 6 : tmux select-window -t :=5; open -a /Applications/Iterm.app

alt + shift - 1 : tmux swap-window -t :=0; open -a /Applications/Iterm.app
alt + shift - 2 : tmux swap-window -t :=1; open -a /Applications/Iterm.app
alt + shift - 3 : tmux swap-window -t :=2; open -a /Applications/Iterm.app
alt + shift - 4 : tmux swap-window -t :=3; open -a /Applications/Iterm.app
alt + shift - 5 : tmux swap-window -t :=4; open -a /Applications/Iterm.app
alt + shift - 6 : tmux swap-window -t :=5; open -a /Applications/Iterm.app

ctrl - 1 [Slack,Firefox] : khd -p 'cmd - 1'
ctrl - 2 [Slack,Firefox] : khd -p 'cmd - 2'
ctrl - 3 [Slack,Firefox] : khd -p 'cmd - 3'
ctrl - 4 [Slack,Firefox] : khd -p 'cmd - 4'
ctrl - 5 [Slack,Firefox] : khd -p 'cmd - 5'
ctrl - 6 [Slack,Firefox] : khd -p 'cmd - 6'
ctrl - 7 [Slack,Firefox] : khd -p 'cmd - 7'
ctrl - 8 [Slack,Firefox] : khd -p 'cmd - 8'
ctrl - 9 [Slack,Firefox] : khd -p 'cmd - 9'
ctrl - 0 [Slack,Firefox] : khd -p 'cmd - 0'

ctrl - q : khd -p 'cmd - q'
ctrl - w : khd -p 'cmd - w'
ctrl - k [Slack] : khd -p 'cmd - k'

ctrl - c ![iTerm2] : khd -p 'cmd - c'
ctrl - v ![iTerm2] : khd -p 'cmd - v'
ctrl + shift -c [iTerm2] : khd -p 'cmd - c'
ctrl + shift -v [iTerm2] : khd -p 'cmd - v'

ctrl - space : dismiss_notification

alt + shift - escape : pmset displaysleepnow
